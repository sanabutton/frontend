{
  "private": true,
  "name": "@sanabutton/player",
  "version": "0.0.0",
  "description": "さなボタン(2) のオーディオプレイヤー",
  "main": "index.js",
  "scripts": {
    "start": "next",
    "build": "rimraf .next out && next build && next export",
    "export": "next export",
    "pretest": "npm run lint && npm run clean",
    "test": "jest",
    "lint": "eslint --fix --ext .ts,.tsx src/pages src/components src/lib",
    "lint:tsc": "tsc -p . --noEmit",
    "clean": "shx rm -rf coverage dist",
    "fmt": "prettier --write \"src/**/*\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.22.0",
    "@typescript-eslint/parser": "2.22.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-config-react-app": "5.2.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-standard": "4.0.1",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "shx": "0.3.2",
    "ts-jest": "25.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "roots": [
      "<rootDir>/components/",
      "<rootDir>/lib/",
      "<rootDir>/pages/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/jest": "25.1.4",
    "@types/node": "12.12.29",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/styled-components": "5.0.1",
    "axios": "0.19.2",
    "date-fns": "2.10.0",
    "eslint": "6.8.0",
    "isomorphic-unfetch": "3.0.0",
    "next": "9.2.2",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "rimraf": "3.0.2",
    "styled-components": "5.0.1",
    "typescript": "3.8.3"
  }
}
