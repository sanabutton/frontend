{
  "private": true,
  "name": "@sanabutton/player",
  "version": "0.0.0",
  "description": "さなボタン(2) のオーディオプレイヤー",
  "main": "index.js",
  "scripts": {
    "start": "next",
    "build": "rimraf .next out && next build && next export",
    "export": "next export",
    "pretest": "npm run lint && npm run clean",
    "test": "jest",
    "lint": "eslint --fix --ext .ts,.tsx src/pages src/components src/lib",
    "lint:tsc": "tsc -p . --noEmit",
    "clean": "shx rm -rf coverage dist",
    "fmt": "prettier --write \"src/**/*\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.33.0",
    "@typescript-eslint/parser": "2.33.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.13.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-standard": "4.0.1",
    "jest": "25.5.4",
    "prettier": "1.19.1",
    "shx": "0.3.2",
    "ts-jest": "25.5.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "roots": [
      "<rootDir>/components/",
      "<rootDir>/lib/",
      "<rootDir>/pages/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/jest": "25.2.2",
    "@types/node": "12.12.39",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/styled-components": "5.1.0",
    "axios": "0.19.2",
    "date-fns": "2.13.0",
    "eslint": "6.8.0",
    "isomorphic-unfetch": "3.0.0",
    "next": "9.4.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "rimraf": "3.0.2",
    "styled-components": "5.1.0",
    "typescript": "3.9.2"
  }
}
