{
  "private": true,
  "name": "@sanabutton/player",
  "version": "0.0.0",
  "description": "さなボタン(2) のオーディオプレイヤー",
  "main": "index.js",
  "scripts": {
    "start": "next",
    "build": "next build",
    "pretest": "npm run lint && npm run clean",
    "test": "jest --ci",
    "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:tsc",
    "lint:eslint": "eslint --ext .ts,.tsx --fix {pages,components,lib}",
    "lint:prettier": "prettier -l \"{pages,components,lib}/**/*\"",
    "lint:tsc": "tsc -p . --noEmit",
    "clean": "shx rm -rf coverage dist",
    "fmt": "prettier --write \"src/**/*\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "shx": "0.3.2",
    "ts-jest": "25.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "roots": [
      "<rootDir>/src/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/jest": "25.1.3",
    "@types/node": "12.12.29",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.0.1",
    "axios": "0.19.2",
    "eslint": "^6.8.0",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^9.2.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "styled-components": "^5.0.1",
    "typescript": "3.8.3"
  }
}
